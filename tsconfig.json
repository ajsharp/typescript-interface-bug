{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "lib": ["es2017", "dom", "es2015.promise"],
    "esModuleInterop": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/*"
  ]
}